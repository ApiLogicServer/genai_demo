Project DBML {
  Note: '''
Customer: customers, storing their balance and credit limit.
Item: items in an order, with quantity and price details.
Order: customer orders, including a note and shipping date.
Product: available products with their unit price.
'''
}

Table Customer {
    id INTEGER [primary key]
    name VARCHAR 
    balance FLOAT 
    credit_limit FLOAT 
    }

Table Item {
    id INTEGER [primary key]
    order_id INTEGER 
    product_id INTEGER 
    quantity INTEGER 
    amount FLOAT 
    unit_price FLOAT 
    }

Table Order {
    id INTEGER [primary key]
    customer_id INTEGER 
    date_ordered DATETIME 
    date_shipped DATETIME 
    notes VARCHAR 
    amount_total FLOAT 
    }

Table Product {
    id INTEGER [primary key]
    name VARCHAR 
    unit_price FLOAT 
    }



// Relationships
    Ref: Item.(order_id) < Order.(id)
    Ref: Item.(product_id) < Product.(id)
    Ref: Order.(customer_id) < Customer.(id)
